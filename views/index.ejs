<!DOCTYPE html>
	<html>
		<head>
			<title>Dashboard - BYT</title>

			<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
			<script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>

			<script src="/javascripts/angularApp.js"></script>
		</head>
		<body ng-app="Dashboard">
			<div class="row">
				<div class="col-md-6 col-md-offset-3">
					<ui-view></ui-view>
				</div>
			</div>		
			<script type="text/ng-template" id="/income.html">
				<div ng-repeat='item in allIncome'>
					{{ item.description }} - {{ item.amount }}					
				</div>			
				<div>{{description}} ----- {{income}}</div>	
				<div> Total Income - {{ totalIncome }} </div>
				<form name='form' ng-submit="incomeForm()">
					<span>Description</span>
					<input type="text" placeholder="Job" ng-model="description">
					<span>Amount</span>
					<input type="number" placeholder="Amount" ng-model="income">					
					<input type="submit" value="Submit">
				</form>
			</script>	
			<script type="text/ng-template" id="/bills.html">
				<div ng-repeat='bill in bills'>
					{{ bill.description }} - {{ bill.amount }}					
				</div>				
				<div>{{description}} ----- {{amount}}</div>
				<div>
					Total Bills - {{ totalBills }}
				</div>
				<form name='form' ng-submit="billForm()">
					<span>Description</span>
					<input type="text" placeholder="Rent" ng-model="description">
					<span>Amount</span>
					<input type="number" placeholder="Amount" ng-model="amount">					
					<input type="submit" value="Submit">
				</form>
			</script>	
			<script type="text/ng-template" id="/monthly-expenses.html">
				<div ng-repeat='limit in spendingLimit'>
					Spending Limit: {{ limit }}
				</div>
				<div>
					Total spent: {{ totalSpent }}
				</div>
				<div>
					Left over: {{ leftOver }}
				</div>
				<div>
					Up by: {{ upBy | number:0 }}
				</div>
				<div>
					Daily budget: {{ dailyBudget | number:0 }}
				</div>
				<div>
					Days left: {{ daysLeft | number:0 }}
				</div>
				<div>
					Period: {{ periodStart | date:'MM/dd/yyyy' }} - {{ periodEnd | date:'MM/dd/yyyy' }}
				</div>
				<div>
					Today: {{ today | date:'MM/dd/yyyy' }}
				</div>
				<div ng-hide='true'>
					{{amount1}}
				</div>				
				<div>
					<form name='form' ng-submit='spendingLimitForm()'>
						<span>Set spending limit</span>
						<input type='number' placeholder='1350' ng-model='amount1'>
						<input type='submit' value='Submit'>
					</form>
				</div>
				<br>
				<br>
				<br>
				<div ng-repeat='expense in monthlyExpenses'>
					{{ expense.description }} - {{ expense.amount }}
				</div>
				<div> {{description}} ---- {{amount}} </div>				
				<div>
					<form name='form' ng-submit='monthlyExpenseForm()'>
						<span>Description</span>
						<input type='text' placeholder='Starbucks' ng-model='description'>
						<span>Amount</span>
						<input type='number' placeholder='5.49' ng-model='amount'>
						<input type='submit' value='Submit'>
					</form>
				</div>
			</script>		
		</body>
	</html>